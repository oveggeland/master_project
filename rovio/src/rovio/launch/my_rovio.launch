<?xml version="1.0" encoding="UTF-8"?> 
<launch>

  <arg name="rovio_bag" default="fix_expo" />
  <arg name="record" default="false" />

  <node pkg="rosbag" type="record" name="rosbag_record_poses"
       args="-O /home/oveggeland/master_project/evo/my_data/$(arg rovio_bag)_traj.bag /rovio/pose_with_covariance_stamped"
       if="$(arg record)" />

  <node pkg="rovio" type="rovio_rosbag_loader" name="rovio" output="screen">
  <param name="filter_config" value="$(find rovio)/cfg/my_rovio.info"/>
  <param name="camera0_config" value="$(find rovio)/cfg/my_cam0.yaml"/>
  <param name="camera1_config" value="$(find rovio)/cfg/my_cam1.yaml"/>
  <param name="rosbag_filename" value="/home/oveggeland/master_project/rovio/data/$(arg rovio_bag).bag"/>
  <param name="imu_topic_name" value="/imu_acc_ar"/>
  <param name="cam0_topic_name" value="/cam0/cam0"/>
  <param name="cam1_topic_name" value="/cam1/cam1"/>
  </node>
</launch>